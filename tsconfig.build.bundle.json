{
  // useful for bundling because esbuild can then tree-shake via the paths
  "extends": "./tsconfig.build.regular.json",
  "compilerOptions": {
    "paths": {
      "@testzilla/core": ["./packages/core/src"],
      "@testzilla/dom-core": ["./packages/dom-core/src"],
      "@testzilla/react": ["./packages/react/src"],
      "@testzilla/cypress": ["./packages/cypress/src"],
      "@testzilla/playwright": ["./packages/playwright/src"],
      
      "@testzilla/component-driver-mui-v5": ["./packages/component-driver-mui-v5/src"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/dom-core" },
    { "path": "./packages/react" },
    { "path": "./packages/cypress" },
    { "path": "./packages/playwright" },
    { "path": "./packages/component-driver-mui-v5" }
  ]
}
