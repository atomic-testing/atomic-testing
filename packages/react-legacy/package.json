{
  "name": "@atomic-testing/react-legacy",
  "version": "0.78.0",
  "description": "Adapter for testing React 17 and earlier",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "check:type": "tsc --noEmit"
  },
  "author": "Tianzhen Lin <tangent@usa.net>",
  "keywords": [
    "testing",
    "react",
    "legacy"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/atomic-testing/atomic-testing.git",
    "directory": "packages/react-legacy"
  },
  "dependencies": {
    "@atomic-testing/core": "workspace:*",
    "@atomic-testing/dom-core": "workspace:*",
    "@atomic-testing/react-core": "workspace:*",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "peerDependencies": {
    "@testing-library/dom": ">=9.2.0",
    "@testing-library/react": ">=12.0.0",
    "@testing-library/user-event": ">=14.0.0",
    "react": "^16 || ^17",
    "react-dom": "^16 || ^17"
  },
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  }
}
